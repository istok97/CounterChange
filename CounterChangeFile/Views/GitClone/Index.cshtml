@model IEnumerable<CounterChangeFile.Models.Repos>
@{
    ViewBag.Title = "Repository";
}

<h2>Create</h2>

<h4>Git Init</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="GitClone" asp-action="GitClone">
            <div asp-validation-summary="ModelOnly"></div>
            <span> Input reference from GitHub</span>
            <div>
                <input name="reference" class="form-control" />
            </div>
            <span>
                
                Input local path
            </span>
            <div>
                <input name="path" class="form-control" />
            </div>
            <div>
                <br />
                <button class="btn btn-info" type="submit"> Start Clone</button>
            </div>
        </form>
    </div>
</div>
